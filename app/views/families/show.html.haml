.row
  .col-md-6.col-md-offset-3
    .page-header
      %h1
        家族設定
        %small
          = "#{current_user.nickname}さん"
    %h3
      家族一覧
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th
            ニックネーム
      %tbody
        - @family.members.each do |member|
          %tr
            %td= member.nickname

    = link_to '+家族を招待する', '#'
    %hr

    %h3
      からだ一覧
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th
            ニックネーム
          %th
            メモの数
          %th
      %tbody
        - @family.bodies.each do |body|
          %tr
            %td= body.nickname
            %td= body.notes.count
            %td= link_to '編集', edit_body_path(body)

    = link_to '+からだを追加する', new_body_path

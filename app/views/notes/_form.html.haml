= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |message|
          %li= message

  = f.label :body
  = f.collection_select :body_id, current_user.family.bodies, :id, :nickname, prompt: true, class: 'form-control'

  = f.label :noted_at
  = f.datetime_select :noted_at, class: 'form-control'

  = f.label :detail
  = f.text_area :detail, class: 'form-control'

  = f.submit class:'btn btn-primary'

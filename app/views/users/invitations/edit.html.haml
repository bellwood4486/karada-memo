.row.justify-content-center
  .col-4
    .page-header
      %h1
        = t 'devise.invitations.edit.header'

    = minimal_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
      = f.input :invitation_token, as: :hidden
      = f.input :nickname
      - if f.object.class.require_password_on_accepting
        = f.input :password, hint: password_length_hint(@minimum_password_length)
        = f.input :password_confirmation
      = f.button :submit, t('devise.invitations.edit.submit_button'), class: 'btn-primary'

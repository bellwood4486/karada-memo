.row.justify-content-center
  .col-4
    .page-header
      %h1
        = t('devise.invitations.new.header')

    = minimal_form_for resource, as: resource_name, url: invitation_path(resource_name), html: {method: :post} do |f|
      - resource.class.invite_key_fields.each do |field|
        = f.input :email
        = f.button :submit, t('devise.invitations.new.submit_button'), class: 'btn-primary'

%h1= t('.sign_up_welcome')
%h2= t('.sign_up_detail')

.row
  .col-md-6.col-md-offset-3
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      = f.label :nickname
      = f.text_field :nickname, class: 'form-control', autocomplete: 'off'

      = f.label :email
      = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: 'email'

      = f.label :password
      - if @minimum_password_length
        %em= t('devise.shared.minimum_password_length', count: @minimum_password_length)
      = f.password_field :password, class: 'form-control', autocomplete: 'off'

      = f.label :password_confirmation
      = f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off'

      = f.submit t('.sign_up'), class: 'btn btn-primary'
    = render 'users/shared/links'

.row.justify-content-center
  .col-4
    .page-header
      %h1
        = t('.sign_up')

    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .form-group
        = f.text_field :nickname, class: 'form-control', placeholder: t('activerecord.attributes.user.nickname')

      .form-group
        = f.email_field :email, class: 'form-control', autocomplete: 'email', placeholder: t('activerecord.attributes.user.email')

      .form-group
        = f.password_field :password, class: 'form-control', placeholder: t('activerecord.attributes.user.password')
        - if @minimum_password_length
          %small.form-text.text-muted
            = t('users.shared.minimum_password_length', count: @minimum_password_length)

      .form-group
        = f.password_field :password_confirmation, class: 'form-control', placeholder: t('activerecord.attributes.user.password_confirmation')

      .form-group
        = f.submit t('.sign_up'), class: 'btn btn-primary'

      %div
        = render 'users/shared/links'
